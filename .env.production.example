# PIKALEADS Quiz System - Production Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================
# DATABASE CONFIGURATION
# ============================================
# MySQL/TiDB connection string
# Format: mysql://username:password@host:port/database
DATABASE_URL=mysql://your_user:your_password@localhost:3306/pikaleads_db

# ============================================
# AUTHENTICATION & SECURITY
# ============================================
# JWT secret for session tokens (generate with: openssl rand -base64 32)
JWT_SECRET=your_super_secret_jwt_key_here_change_this

# Manus OAuth configuration (if using Manus auth)
VITE_APP_ID=your_app_id
OAUTH_SERVER_URL=https://api.manus.im
VITE_OAUTH_PORTAL_URL=https://portal.manus.im

# Owner information
OWNER_OPEN_ID=your_owner_open_id
OWNER_NAME=Your Name

# ============================================
# MANUS BUILT-IN SERVICES (Optional)
# ============================================
BUILT_IN_FORGE_API_URL=https://forge.manus.im
BUILT_IN_FORGE_API_KEY=your_forge_api_key
VITE_FRONTEND_FORGE_API_KEY=your_frontend_forge_api_key
VITE_FRONTEND_FORGE_API_URL=https://forge.manus.im

# ============================================
# TELEGRAM BOT (Optional - for notifications)
# ============================================
# Get token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
# Get chat ID from @userinfobot
TELEGRAM_CHAT_ID=your_telegram_chat_id

# ============================================
# ANALYTICS (Optional)
# ============================================
VITE_ANALYTICS_ENDPOINT=https://analytics.yourdomain.com
VITE_ANALYTICS_WEBSITE_ID=your_website_id

# ============================================
# BRANDING
# ============================================
VITE_APP_TITLE=PIKALEADS Lead Engine
VITE_APP_LOGO=/logo.png

# ============================================
# ZADARMA IP TELEPHONY (Optional)
# ============================================
# Get from https://zadarma.com/
ZADARMA_API_KEY=your_zadarma_api_key
ZADARMA_API_SECRET=your_zadarma_api_secret

# ============================================
# GOOGLE MEET INTEGRATION (Optional)
# ============================================
# Get from Google Cloud Console
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=https://yourdomain.com/api/oauth/google/callback

# ============================================
# ZOOM INTEGRATION (Optional)
# ============================================
# Get from Zoom Marketplace
ZOOM_CLIENT_ID=your_zoom_client_id
ZOOM_CLIENT_SECRET=your_zoom_client_secret
ZOOM_REDIRECT_URI=https://yourdomain.com/api/oauth/zoom/callback

# ============================================
# EMAIL SMTP (Optional - for email sending)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_EMAIL=noreply@yourdomain.com
SMTP_FROM_NAME=PIKALEADS

# ============================================
# NODE ENVIRONMENT
# ============================================
NODE_ENV=production
PORT=3000
