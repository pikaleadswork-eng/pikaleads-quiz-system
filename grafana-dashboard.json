{
  "dashboard": {
    "title": "PIKALEADS Lead Engine - Monitoring Dashboard",
    "tags": ["pikaleads", "monitoring", "crm"],
    "timezone": "browser",
    "refresh": "10s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Memory Usage",
        "type": "graph",
        "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "pikaleads_memory_usage_percent",
            "legendFormat": "Memory Usage %",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percent", "min": 0, "max": 100}
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {"params": [85], "type": "gt"},
              "operator": {"type": "and"},
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"params": [], "type": "avg"},
              "type": "query"
            }
          ],
          "name": "High Memory Usage"
        }
      },
      {
        "id": 2,
        "title": "CPU Load Average",
        "type": "graph",
        "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "pikaleads_cpu_load_1m",
            "legendFormat": "1 minute",
            "refId": "A"
          },
          {
            "expr": "pikaleads_cpu_load_5m",
            "legendFormat": "5 minutes",
            "refId": "B"
          },
          {
            "expr": "pikaleads_cpu_load_15m",
            "legendFormat": "15 minutes",
            "refId": "C"
          }
        ]
      },
      {
        "id": 3,
        "title": "Database Status",
        "type": "stat",
        "gridPos": {"x": 0, "y": 8, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "pikaleads_database_status",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "none",
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"type": "value", "value": "0", "text": "DOWN", "color": "red"},
              {"type": "value", "value": "1", "text": "HEALTHY", "color": "green"}
            ]
          }
        }
      },
      {
        "id": 4,
        "title": "Database Response Time",
        "type": "stat",
        "gridPos": {"x": 6, "y": 8, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "pikaleads_database_response_ms",
            "refId": "A"
          }
        ],
        "options": {
          "unit": "ms",
          "colorMode": "value"
        }
      },
      {
        "id": 5,
        "title": "Errors (24h)",
        "type": "stat",
        "gridPos": {"x": 12, "y": 8, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "pikaleads_errors_24h",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "area"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 10, "color": "yellow"},
                {"value": 50, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 6,
        "title": "Leads (24h)",
        "type": "stat",
        "gridPos": {"x": 18, "y": 8, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "pikaleads_leads_24h",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "area"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 10, "color": "yellow"},
                {"value": 50, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 7,
        "title": "Error Rate",
        "type": "graph",
        "gridPos": {"x": 0, "y": 12, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(pikaleads_errors_24h[5m])",
            "legendFormat": "Errors per minute",
            "refId": "A"
          }
        ]
      },
      {
        "id": 8,
        "title": "Lead Generation Rate",
        "type": "graph",
        "gridPos": {"x": 12, "y": 12, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(pikaleads_leads_24h[1h])",
            "legendFormat": "Leads per hour",
            "refId": "A"
          }
        ]
      },
      {
        "id": 9,
        "title": "Server Uptime",
        "type": "stat",
        "gridPos": {"x": 0, "y": 20, "w": 12, "h": 4},
        "targets": [
          {
            "expr": "pikaleads_uptime_seconds",
            "refId": "A"
          }
        ],
        "options": {
          "unit": "s",
          "colorMode": "background"
        }
      },
      {
        "id": 10,
        "title": "Memory Usage (Bytes)",
        "type": "graph",
        "gridPos": {"x": 12, "y": 20, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "pikaleads_memory_used_bytes",
            "legendFormat": "Used",
            "refId": "A"
          },
          {
            "expr": "pikaleads_memory_free_bytes",
            "legendFormat": "Free",
            "refId": "B"
          },
          {
            "expr": "pikaleads_memory_total_bytes",
            "legendFormat": "Total",
            "refId": "C"
          }
        ],
        "yaxes": [
          {"format": "bytes"}
        ]
      }
    ]
  }
}
